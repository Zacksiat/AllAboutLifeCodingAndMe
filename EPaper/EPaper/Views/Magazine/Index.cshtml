@model List<EPaper.Models.Magazine>

@{
    ViewData["Title"] = "Index";
}

<h2>MAGAZINES - ΠΕΡΙΟΔΙΚΑ</h2>

<div class="container-fluid">
    <div class="row">
        <div class="col">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="index.cshtml">Home</a></li>
                    <li class="breadcrumb-item"><a href="category.cshtml">Product</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Magazines</li>
                </ol>
            </nav>
        </div>
    </div>
</div>
<div class="container-fluid">
    <div class="row">
        <div class="col-12 col-sm-3">
            <div class="card bg-light mb-3">
                <div class="card-header bg-primary text-white text-uppercase"><i class="fa fa-list"></i> Magazines</div>
                <ul class="list-group category_block">
                    
                    <li class="list-group-item"><a asp-controller="Magazine" asp-action="Index" asp-route-category="Gossip">Gossip</a></li>
                    <li class="list-group-item"><a href="category.cshtml">TV</a></li>
                    <li class="list-group-item"><a href="category.cshtml">Koukos</a></li>
                    <li class="list-group-item"><a href="category.cshtml">Entetainment</a></li>
                    <li class="list-group-item"><a href="category.cshtml">Educational</a></li>
                </ul>
            </div>
        </div>

        <div class="col">
            <div class="row">
                @foreach (var mag in Model)
                {
                    
                    <div class="col-12 col-md-6 col-lg-4">
                        <div class="card">
                            <img class="card-img-top" src="https://dummyimage.com/600x400/55595c/fff" alt="Card image cap">
                            <div class="card-body">
                                <h4 class="card-title"><a href="product.cshtml" title="View Product">@mag.Product.Name</a></h4>
                                <p class="card-text">@mag.Product.Description</p>
                                <div class="row">
                                    <div class="col">
                                        <p class="btn btn-light btn-block">@(mag.Product.Price + " $")</p>
                                    </div>
                                    <div class="col">
                                        <form asp-action="AddtoCart" asp-controller="Cart" asp-route-id ="@mag.ProductId">
                      
                                            <input type="submit" value="Add to Cart"  class="btn btn-danger btn-block"><i class="fa fa-cart-plus"></i> 
                                
                                        </form>
                                            @*<form asp-action="AddtoCart" asp-controller="Cart" input type="hidden" asp-for="ProductId"  class="btn btn-danger btn-block"><i class="fa fa-cart-plus"></i></form>*@
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                }
            </div>
        </div>


    </div>
    <div class="col-12">
        <nav aria-label="...">
            <ul class="pagination">
                <li class="page-item disabled">
                    <a class="page-link" href="#" tabindex="-1">Previous</a>
                </li>
                <li class="page-item"><a class="page-link" href="#">1</a></li>
                <li class="page-item active">
                    <a class="page-link" href="#">2 <span class="sr-only">(current)</span></a>
                </li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item">
                    <a class="page-link" href="#">Next</a>
                </li>
            </ul>
        </nav>
    </div>
</div>



