@model IEnumerable<EPaper.Models.Book>

@{
    ViewData["Title"] = "BookIndex";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Book Page</h2>
<br /> </br>
<body>
    <div class="row">
        <div class="col-6  text-left">
            <a asp-action="Create" class="btn btn-info"><i class="fas fa-plus"></i>&nbsp;New Book</a>
        </div>
    </div>
    <br />
    <div>
        <table class="table table-striped border">
            <tr class="table-info">

                <th>
                    @Html.DisplayNameFor(model => model.Name)

                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Category)

                </th>


                <th>
                    @Html.DisplayNameFor(model => model.Price)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Pages)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Author)

                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Publisher)

                </th>
                
                <th>
                    @Html.DisplayNameFor(m => m.Product.Available)
                </th>
            </tr>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(m => item.Name)
                </td>
                <td>
                    @Html.DisplayNameFor(m => item.Category)

                </td>

                <td>
                    @Html.DisplayFor(m => item.Price)
                </td>
                <td>
                    @Html.DisplayNameFor(m => item.Pages)
                </td>
                <td>
                    @Html.DisplayNameFor(m => item.Author)

                </td>
                <td>
                    @Html.DisplayNameFor(mo => item.Publisher)

                </td>

                <td>
                    @Html.DisplayFor(m => item.Product.Available)
                </td>



            </tr>
            }
        </table>
    </div>

</body>
