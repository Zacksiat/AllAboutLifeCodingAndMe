@model IEnumerable<EPaper.Models.Product>

@{
    ViewData["Title"] = "AdminIndex";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>AdminIndex</h2>
<div class="dropdown">
    <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
        Create Product
        <span class="caret"></span>
    </button>
    <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
        <li><a asp-controller="Book" asp-action="Create">Book</a></li>
        <li><a asp-controller="Magazine" asp-action="Create">Magazine</a></li>
        <li><a asp-controller="Cd" asp-action="Create">CD</a></li>
    </ul>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)

            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>


            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)

        {
            var conc = item.Price + "$";
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => conc)
                </td>




                <td>
                    <a asp-action="Edit" asp-route-id="@item.ProductId">Edit</a> | |
                    <a asp-action="Delete" asp-route-id="@item.ProductId">Delete</a> |
                    <a asp-action="AddtoCart" asp-controller="Basket" asp-route-id="@item.ProductId">Add to Cart</a>



                </td>
            </tr>
        }
    </tbody>
</table>
